{
  "name": "clean-bikeshop-ui",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:styles": "postcss src/Presentation/css/tailwind.src.css -o src/Presentation/css/tailwind.css",
    "prettier": "prettier --write src/**/*.{ts,js,tsx,jsx}",
    "prebuild": "NODE_ENV=production yarn build:styles",
    "prestart": "yarn build:styles",
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "tabWidth": 3,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "autoprefixer": "^9.7.4",
    "husky": "^4.2.3",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.19.1",
    "react-scripts": "3.4.0",
    "tailwindcss": "^1.2.0",
    "typescript": "^3.8.3"
  }
}
